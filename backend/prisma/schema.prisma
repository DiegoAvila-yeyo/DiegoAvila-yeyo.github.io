// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Producto (Men√∫)
model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  category    String    // Ej: "Caf√©", "Postre"
  isAvailable Boolean   @default(true)
  
  // Relaci√≥n: Un producto puede tener muchos "Moods" asociados
  moods       MoodTag[] 
  
  createdAt   DateTime  @default(now())
}

// El diferenciador: Etiquetas para el algoritmo de recomendaci√≥n
model MoodTag {
  id        Int       @id @default(autoincrement())
  name      String    // Ej: "Energ√≠a", "Relax", "Fresco", "Dulce"
  
  // Relaci√≥n inversa
  productId Int
  product   Product   @relation(fields: [productId], references: [id])
}

// Reservas (Para el sistema "Live Preview")
model Reservation {
  id          Int      @id @default(autoincrement())
  clientName  String
  email       String   // üìß Crucial para enviar confirmaciones
  date        DateTime
  people      Int
  type        String   // ‚òï 'Cata', 'Mesa Privada', 'Trabajo'
  status      String   @default("pending")
}